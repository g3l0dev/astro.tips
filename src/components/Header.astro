---
interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<h1><span class="text-gradient">{title}</span></h1>

<style>
  h1 {
    font-size: 3em;
    font-weight: 800;
    margin: 0;
  }
  .text-gradient {
    background: -webkit-linear-gradient(#86efac, #3b82f6, #9333ea);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
