---
import { Footer, Header, HeaderTop, } from "@components/";
import "../styles/global.css";
import Seo from "src/components/Seo.astro";

interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<Seo title={title} description="Astro Blog" />
	</head>
	<body class="grid grid-rows-[auto,1fr,auto] h-dvh">
		<HeaderTop client:load/>
		<header class="container mx-auto p-4">esto es un navegador</header>
		<main>
			<slot />
		</main>
		<Footer/>
	</body>
</html>
